<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customButtonStyle" parent="Theme.Digital_contest.NoActionBar">
        <item name="android:background">@drawable/select_btn_enabled</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customEditTextStyle" parent="Theme.Digital_contest.NoActionBar">
        <item name="android:background">@color/white</item>
<!--        <item name="android:background">@drawable/shape_edit_text</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleBarStyle" parent="Theme.Digital_contest.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="myProfileMenu" parent="Theme.Digital_contest.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/default_radius_10</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>