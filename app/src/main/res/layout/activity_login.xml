<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.digital_contest.activity.login.LoginActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.login.LoginActivity">

        <TextView
            android:id="@+id/txt_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="로그인"
            android:textSize="40sp"

            android:layout_marginVertical="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_login_inputId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@={viewModel.id}"
            android:hint="ID"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/edt_login_inputPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@={viewModel.password}"
            android:hint="Password"
            android:inputType="textPassword"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_login_inputId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="login"
            android:textSize="25dp"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"

            app:layout_constraintTop_toBottomOf="@+id/edt_login_inputPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_login_singUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="회원 가입"
            android:textSize="15dp"

            android:layout_marginVertical="10dp"

            app:layout_constraintTop_toBottomOf="@+id/btn_login_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>