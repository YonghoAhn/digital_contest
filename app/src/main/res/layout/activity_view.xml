<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.digital_contest.activity.view.ViewActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_view_boardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{viewModel.boardTitle, default=`제목`}"
            android:textSize="24sp"

            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_view_writer"
            />

        <TextView
            android:id="@+id/txt_view_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@{`작성자 : ` + viewModel.boardWriter, default=`작성자`}"

            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_view_boardContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{viewModel.boardContent, default=`내용`}"
            android:textSize="24sp"

            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@id/txt_view_boardTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/img_view_boardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/txt_view_boardContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>