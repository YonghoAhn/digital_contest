<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpActivity">

    <TextView
        android:id="@+id/txt_singUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="회원 가입"
        android:textSize="40dp"
        />

    <EditText
        android:id="@+id/edt_singUp_inputName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_singUp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="이름"
        />

    <EditText
        android:id="@+id/edt_singUp_inputId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_singUp_inputName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="ID"
        />

    <EditText
        android:id="@+id/edt_singUp_inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_singUp_inputId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Email"
        />

    <EditText
        android:id="@+id/edt_singUp_inputPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_singUp_inputEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Password"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/edt_singUp_inputPasswordRe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_singUp_inputPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_singUp_singUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_singUp_inputPasswordRe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="회원 가입"
        android:textSize="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>